<h1>Task list!</h1>
#if ($tasks)
  <ul>
    #foreach ($task in $tasks)
      <li><a href="/tasks/$task.getId()">$task.getDescription()</a></li>
    #end
  </ul>
#else
  <p>No Tasks!</p>
#end

<a href="/categories/$category.getId()/tasks/new">Add New Task</a>
